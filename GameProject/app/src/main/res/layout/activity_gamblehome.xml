<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gambleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgd"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sinOfGreed2"
        android:layout_width="460dp"
        android:layout_height="99dp"
        android:layout_marginBottom="304dp"
        android:src="@drawable/icontitlegreed"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="476dp"
        android:layout_height="258dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icongamble"
        app:layout_constraintBottom_toTopOf="@+id/btnGambleLevelOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGambleLevelOne"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F14B4B"
        android:text="Level1"
        app:layout_constraintBottom_toTopOf="@+id/btnGambleLevelTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGambleLevelTwo"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#F14B4B"
        android:text="Level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
