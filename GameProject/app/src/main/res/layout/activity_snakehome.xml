<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgd">

    <ImageView
        android:id="@+id/snakeLogo"
        android:layout_width="476dp"
        android:layout_height="258dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/iconsnake"
        app:layout_constraintBottom_toTopOf="@+id/snakeLevelOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/snakeLevelOne"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#2C9CDA"
        android:text="Level1"
        app:layout_constraintBottom_toTopOf="@+id/snakeLevelTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/snakeLevelTwo"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#2C9CDA"
        android:text="Level2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/snakeCustomization"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#2C9CDA"
        android:text="customization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snakeLevelTwo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/sinOfGluttonyTwo"
        android:layout_width="460dp"
        android:layout_height="99dp"
        android:src="@drawable/icontitlegluttony"
        app:layout_constraintBottom_toTopOf="@+id/snakeLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
