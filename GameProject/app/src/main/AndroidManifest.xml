<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uoft.csc207.gameproject">

    <application
        android:name=".GameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ScoreboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GambleHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GameMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.gamble.GambleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.gamble.Gamble2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SaveScoreActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
